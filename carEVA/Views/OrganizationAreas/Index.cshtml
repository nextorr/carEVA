@model IEnumerable<carEVA.Models.evaOrganizationArea>

@{
    ViewBag.Title = "Areas";
}

<h2>Areas internas</h2>

<p>
    @Html.ActionLink("Crear nueva Area", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.organization.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.areaCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nameAbreviation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isEnabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isExternal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.organization.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.areaCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nameAbreviation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isEnabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isExternal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.evaOrganizationAreaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.evaOrganizationAreaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.evaOrganizationAreaID })
        </td>
    </tr>
}

</table>

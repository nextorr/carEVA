@model IEnumerable<carEVA.Models.evaCourseEnrollment>

@{
    ViewBag.Title = "userDataAdmin";
}

<h2>Administrar datos del usuario</h2>

@using (Ajax.BeginForm(
                new AjaxOptions
                {
                    HttpMethod = "get",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "detailInfo"
                }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.Label("usuario a convertir", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("evaUserID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Consultar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div id="detailInfo">
    @Html.Partial("_userInformation")
</div>

@section Scripts {
 @Scripts.Render("~/bundles/jqueryval");
}